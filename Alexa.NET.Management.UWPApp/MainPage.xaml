<Page
    x:Class="Alexa.NET.Management.UWPApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Alexa.NET.Management.UWPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utility="using:Alexa.NET.Management.UWPApp.Utility"
    mc:Ignorable="d">
    <Page.Resources>
        <utility:SkillItemTitleConverter x:Key="TitleConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <NavigationView 
            x:Name="SkillNav" 
            SelectionChanged="SkillNav_OnSelectionChanged"
            IsSettingsVisible="false"
            PaneDisplayMode="Top"
            OverflowLabelMode="NoLabel">
            <NavigationView.PaneCustomContent>
                <ToggleSwitch Toggled="StageSwitch_OnToggled" x:Name="StageSwitch" OffContent="Development" OnContent="Live"></ToggleSwitch>
            </NavigationView.PaneCustomContent>
            <NavigationView.PaneFooter>
                <HyperlinkButton x:Name="VendorName" Margin="12,0"/>
            </NavigationView.PaneFooter>
            <NavigationView.MenuItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource TitleConverter}}"/>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
            <Pivot x:Name="SkillView" DataContext="{Binding CurrentSkill}" Margin="12 0 12 0">
                <PivotItem Header="Info" x:Name="InfoTab"/>
                <PivotItem Header="Apis" />
                <PivotItem Header="Compliance" />
                <PivotItem Header="Events" />
            </Pivot>
        </NavigationView>
    </Grid>
</Page>
